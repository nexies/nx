@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Если у модулей есть зависимости на внешние пакеты, добавьте:
# find_dependency(fmt CONFIG)
# find_dependency(spdlog CONFIG)

# Подключаем экспортированные цели
include("${CMAKE_CURRENT_LIST_DIR}/nxTargets.cmake")

# Поддержка COMPONENTS: создадим переменную с доступными компонентами
set(nx_AVAILABLE_COMPONENTS core)

# Логика выбора компонентов
if(DEFINED nx_FIND_COMPONENTS)
  foreach(comp IN LISTS nx_FIND_COMPONENTS)
    list(FIND nx_AVAILABLE_COMPONENTS "${comp}" _idx)
    if(_idx EQUAL -1)
      set(nx_NOT_FOUND_MESSAGE "Component '${comp}' not found in nx")
      set(nx_FOUND FALSE)
      break()
    endif()
  endforeach()
endif()